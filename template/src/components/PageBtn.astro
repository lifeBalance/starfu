---
import Card from '@components/Card.astro'
const {
  href,
  label,
  direction = 'next',
} = Astro.props as {
  href: string
  label: string
  direction?: 'prev' | 'next'
}
const isPrev = direction === 'prev'
const cardClass = `inline-flex items-center gap-2 w-[45%] ${isPrev ? '' : 'justify-end text-right'}`
const aria = `${isPrev ? 'Previous' : 'Next'}: ${label}`
---
<Card href={href} rel={direction} ariaLabel={aria} class={cardClass}>
  {isPrev ? (
    <>
      <svg class="text-sd-muted text-3xl" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
      <div>
        <p class="text-sd-muted">Previous</p>
        <p class="text-xl">{label}</p>
      </div>
    </>
  ) : (
    <>
      <div>
        <p class="text-sd-muted">Next</p>
        <p class="text-xl">{label}</p>
      </div>
      <svg class="text-sd-muted text-3xl" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z"/>
      </svg>
    </>
  )}
</Card>
